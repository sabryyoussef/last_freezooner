<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Product Template Form View -->
        <record id="view_product_template_form_project" model="ir.ui.view">
            <field name="name">product.template.form.project</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']" position="after">
                    <page string="Document Tags" name="document_tags" 
                          invisible="service_tracking != 'new_workflow'">
                        <field name="document_tag_ids" widget="many2many_tags"/>
                    </page>
                    <page string="Task Templates" name="task_templates" 
                          invisible="service_tracking != 'new_workflow'">
                        <div class="o_row mb-3">
                            <button name="%(project_documents_clean.action_create_task_templates)d" type="action" 
                                    string="Create Default Task Templates" 
                                    class="btn-primary"
                                    invisible="task_template_ids"/>
                        </div>
                        <field name="task_template_ids">
                            <list>
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="description"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>