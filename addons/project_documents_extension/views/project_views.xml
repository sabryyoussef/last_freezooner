    <!-- Reached Checkpoint Views -->
    <record id="reached_checkpoint_form" model="ir.ui.view">
        <field name="name">reached.checkpoint.form</field>
        <field name="model">reached.checkpoint</field>
        <field name="arch" type="xml">
            <form string="Reached Checkpoint">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="task_id"/>
                        <field name="checkpoint_type"/>
                        <field name="reached_date"/>
                        <field name="reached_by"/>
                        <field name="is_final"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="reached_checkpoint_list" model="ir.ui.view">
        <field name="name">reached.checkpoint.list</field>
        <field name="model">reached.checkpoint</field>
        <field name="arch" type="xml">
            <list string="Reached Checkpoints">
                <field name="name"/>
                <field name="project_id"/>
                <field name="checkpoint_type"/>
                <field name="reached_date"/>
                <field name="reached_by"/>
                <field name="is_final"/>
            </list>
        </field>
    </record>

    <record id="reached_checkpoint_search" model="ir.ui.view">
        <field name="name">reached.checkpoint.search</field>
        <field name="model">reached.checkpoint</field>
        <field name="arch" type="xml">
            <search string="Search Checkpoints">
                <field name="name"/>
                <field name="project_id"/>
                <field name="checkpoint_type"/>
                <filter name="final_checkpoints" string="Final Checkpoints" domain="[('is_final', '=', True)]"/>
                <filter name="document_checkpoints" string="Document Checkpoints" domain="[('checkpoint_type', '=', 'document')]"/>
                <filter name="compliance_checkpoints" string="Compliance Checkpoints" domain="[('checkpoint_type', '=', 'compliance')]"/>
                <filter name="partner_checkpoints" string="Partner Checkpoints" domain="[('checkpoint_type', '=', 'partner')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_project" string="Project" context="{'group_by': 'project_id'}"/>
                    <filter name="group_by_type" string="Type" context="{'group_by': 'checkpoint_type'}"/>
                    <filter name="group_by_date" string="Date" context="{'group_by': 'reached_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Reached Checkpoints -->
    <record id="action_reached_checkpoints" model="ir.actions.act_window">
        <field name="name">Reached Checkpoints</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">reached.checkpoint</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No checkpoints found
            </p>
            <p>
                Create checkpoints to track project progress.
            </p>
        </field>
    </record>



    <!-- Add Reached Checkpoints Tab to Project Form -->
    <record id="view_project_form_checkpoint_tab" model="ir.ui.view">
        <field name="name">project.project.form.checkpoint.tab</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Reached Checkpoints">
                    <group>
                        <field name="checkpoint_summary" readonly="1" widget="html"/>
                    </group>
                    <field name="reached_checkpoint_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="checkpoint_type"/>
                            <field name="reached_date"/>
                            <field name="reached_by"/>
                            <field name="is_final"/>
                            <field name="description"/>
                        </list>
                        <form>
                            <group>
                                <field name="name"/>
                                <field name="project_id" invisible="1"/>
                                <field name="checkpoint_type"/>
                                <field name="reached_date"/>
                                <field name="reached_by"/>
                                <field name="is_final"/>
                                <field name="description"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Menu Item for Reached Checkpoints -->
    <menuitem 
        id="menu_reached_checkpoints"
        name="Reached Checkpoints"
        parent="project.menu_project_config"
        action="action_reached_checkpoints"
        sequence="50"/>

