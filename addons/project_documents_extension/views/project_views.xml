<odoo>
    <record id="view_project_list_documents_extension" model="ir.ui.view">
        <field name="name">project.project.list.documents.extension</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="sale_order_id" optional="show" string="Sale Order"/>
            </xpath>
        </field>
    </record>

    <!-- Project Return Form View -->
    <record id="project_return_form_view" model="ir.ui.view">
        <field name="name">project.return.form</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Return Project">
                <group>
                    <field name="name"/>
                    <field name="partner_id" readonly="1"/>
                </group>
                <group>
                    <field name="return_reason" required="1"/>
                    <field name="return_date" default="context_today()"/>
                </group>
                <footer>
                    <button name="action_process_project_return" type="object" string="Return Project" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Project Update Fields Form View -->
    <record id="project_update_fields_form_view" model="ir.ui.view">
        <field name="name">project.update.fields.form</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Update Project Fields">
                <group>
                    <field name="name"/>
                    <field name="partner_id" readonly="1"/>
                </group>
                <group>
                    <field name="update_reason" required="1"/>
                    <field name="update_date" default="context_today()"/>
                </group>
                <footer>
                    <button name="action_process_project_update" type="object" string="Update Project" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Project Return Action -->
    <record id="action_project_return" model="ir.actions.act_window">
        <field name="name">Return Project</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_return_form_view"/>
        <field name="target">new</field>
        <field name="context">{'default_id': active_id}</field>
    </record>

    <!-- Project Update Action -->
    <record id="action_project_update" model="ir.actions.act_window">
        <field name="name">Update Project Fields</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_update_fields_form_view"/>
        <field name="target">new</field>
        <field name="context">{'default_id': active_id}</field>
    </record>

