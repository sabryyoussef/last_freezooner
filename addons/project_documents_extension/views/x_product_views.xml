<odoo>
    <!-- Parallel product views: all blocks from product_views.xml, with x_ document model/field replacements -->
    <!-- Main inherited product template form view with x_ document tabs -->
    <record id="x_product_template_task_templates_extension" model="ir.ui.view">
        <field name="name">x.product.template.task.templates.extension</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="x_required_documents" string="x_Required Documents">
                    <field name="x_required_document_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="x_document_type_id"/>
                            <field name="x_is_required"/>
                            <field name="x_expiry_date"/>
                            <field name="x_is_expired"/>
                            <field name="x_is_verify"/>
                            <field name="attachment_id"/>
                        </list>
                        <form>
                            <group>
                                <field name="name"/>
                                <field name="x_document_type_id"/>
                                <field name="x_is_required"/>
                                <field name="x_expiry_date"/>
                                <field name="attachment_id"/>
                            </group>
                        </form>
                    </field>
                </page>
                <page name="x_deliverable_documents" string="x_Deliverable Documents">
                    <field name="x_deliverable_document_ids">
                        <list editable="bottom">
                            <field name="name"/>
                            <field name="x_document_type_id"/>
                            <field name="x_is_required"/>
                            <field name="x_expiry_date"/>
                            <field name="x_is_expired"/>
                            <field name="x_is_verify"/>
                            <field name="attachment_id"/>
                        </list>
                        <form>
                            <group>
                                <field name="name"/>
                                <field name="x_document_type_id"/>
                                <field name="x_is_required"/>
                                <field name="x_expiry_date"/>
                                <field name="attachment_id"/>
                            </group>
                        </form>
                    </field>
                </page>
                
                <!-- Task Templates Tab -->
                <page name="task_templates" string="Task Templates" invisible="service_tracking != 'new_workflow'">
                    <div class="o_row mb-3">
                        <button name="action_select_existing_task_template" type="object" 
                                string="Select Existing Template" class="btn-primary"/>
                    </div>
                    <field name="task_template_ids">
                        <list>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="stage_id"/>
                            <field name="planned_hours"/>
                            <field name="priority"/>
                            <field name="subtask_count"/>
                            <button name="action_open_subtasks_from_product" type="object" 
                                    icon="fa-tasks" title="Open Subtasks" 
                                    invisible="subtask_count == 0"/>
                        </list>
                        <form string="Task Template" class="o_form_project_tasks">
                            <sheet string="Task Template">
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_open_subtasks_from_product" type="object" 
                                            class="oe_stat_button" icon="fa-tasks"
                                            invisible="subtask_count == 0">
                                        <div class="o_field_widget o_stat_info">
                                            <span class="o_stat_value"><field name="subtask_count"/></span>
                                            <span class="o_stat_text">Subtasks</span>
                                        </div>
                                    </button>
                                </div>
                                <group>
                                    <group>
                                        <field name="name" required="1"/>
                                        <field name="user_ids" string="Assignees" widget="many2many_avatar_user"/>
                                    </group>
                                    <group>
                                        <field name="stage_id" string="Initial Stage"/>
                                        <field name="planned_hours"/>
                                        <field name="sequence"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page name="description_page" string="Description">
                                        <field name="description" type="html" placeholder="Add details about this task template..."/>
                                    </page>
                                    <page name="sub_tasks_page" string="Sub-tasks">
                                        <div class="o_row">
                                            <button name="action_open_subtasks_from_product" type="object" 
                                                    string="Open Subtasks" class="btn-primary"/>
                                            <button name="action_select_existing_task_template" type="object" 
                                                    string="Select Existing Template" class="btn-secondary"/>
                                        </div>
                                        <field name="subtask_ids" nolabel="1">
                                            <list editable="bottom">
                                                <field name="sequence" widget="handle"/>
                                                <field name="name"/>
                                                <field name="user_ids" widget="many2many_avatar_user"/>
                                                <field name="stage_id"/>
                                                <field name="planned_hours"/>
                                                <field name="priority"/>
                                                <field name="milestone_message"/>
                                            </list>
                                        </field>
                                    </page>
                                    <page name="extra_info" string="Extra Info">
                                        <group string="Checkpoint Configuration Rules">
                                            <field name="checkpoint_ids">
                                                <list editable="bottom">
                                                    <field name="checkpoint_ids" widget="many2many_tags"/>
                                                    <field name="stage_id"/>
                                                    <field name="milestone_id"/>
                                                    <field name="sequence"/>
                                                </list>
                                                <form>
                                                    <group>
                                                        <field name="checkpoint_ids" widget="many2many_tags"/>
                                                        <field name="stage_id"/>
                                                        <field name="milestone_id"/>
                                                        <field name="sequence"/>
                                                    </group>
                                                </form>
                                            </field>
                                        </group>
                                    </page>
                                </notebook>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Product Task Template Form View -->
    <record id="x_product_task_template_form_enhanced" model="ir.ui.view">
        <field name="name">x.product.task.template.form.enhanced</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <form string="Product Task Template" class="o_form_project_tasks">
                <sheet string="Task Template">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_subtasks_from_product" type="object" 
                                class="oe_stat_button" icon="fa-tasks"
                                invisible="subtask_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="subtask_count"/></span>
                                <span class="o_stat_text">Subtasks</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title pe-0">
                        <h1 class="d-flex justify-content-between align-items-center">
                            <div class="d-flex w-100">
                                <field name="priority" widget="priority_switch" class="me-3"/>
                                <field name="name" options="{'line_breaks': False}" widget="text" 
                                       class="o_task_name text-truncate w-md-75 w-100 pe-2" 
                                       placeholder="Task Template Name..."/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_tmpl_id" string="Product Template" required="1"/>
                            <field name="user_ids" string="Assignees" 
                                   class="o_task_user_field"
                                   options="{'no_open': True, 'no_quick_create': True}"
                                   widget="many2many_avatar_user"/>
                        </group>
                        <group>
                            <field name="stage_id" string="Initial Stage"/>
                            <field name="planned_hours"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description_page" string="Description">
                            <field name="description" type="html" 
                                   options="{'collaborative': true, 'resizable': false}" 
                                   placeholder="Add details about this task template..."/>
                        </page>
                        <page name="sub_tasks_page" string="Sub-tasks">
                            <div class="o_row mb-3">
                                <button name="action_open_subtasks_from_product" type="object" 
                                        string="Open Subtasks" class="btn-primary"/>
                                <button name="action_select_existing_task_template" type="object" 
                                        string="Select Existing Template" class="btn-secondary"/>
                            </div>
                            <field name="subtask_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="stage_id"/>
                                    <field name="planned_hours"/>
                                    <field name="priority"/>
                                    <field name="milestone_message"/>
                                </list>
                            </field>
                        </page>
                        <page name="extra_info" string="Extra Info">
                            <group string="Checkpoint Configuration Rules">
                                <field name="checkpoint_ids">
                                    <list editable="bottom">
                                        <field name="checkpoint_ids" widget="many2many_tags"/>
                                        <field name="stage_id"/>
                                        <field name="milestone_id"/>
                                        <field name="sequence"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="checkpoint_ids" widget="many2many_tags"/>
                                            <field name="stage_id"/>
                                            <field name="milestone_id"/>
                                            <field name="sequence"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Task Template Form View -->
    <record id="x_product_task_template_form" model="ir.ui.view">
        <field name="name">x.product.task.template.form</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <form string="Task Template">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="product_tmpl_id"/>
                        <field name="stage_id"/>
                    </group>
                    <group>
                        <field name="planned_hours"/>
                        <field name="user_ids" widget="many2many_tags"/>
                        <field name="sequence"/>
                    </group>
                </group>
                <field name="description" placeholder="Describe the task template..."/>
            </form>
        </field>
    </record>

    <!-- Product Task Template List View -->
    <record id="x_product_task_template_list" model="ir.ui.view">
        <field name="name">x.product.task.template.list</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <list string="Task Templates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="stage_id"/>
                <field name="planned_hours"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="priority"/>
            </list>
        </field>
    </record>

    <!-- Product Task Template Search View -->
    <record id="x_product_task_template_search" model="ir.ui.view">
        <field name="name">x.product.task.template.search</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <search string="Search Task Templates">
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="stage_id"/>
                <filter name="has_subtasks" string="Has Subtasks" domain="[('subtask_count', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_product" string="Product" context="{'group_by': 'product_tmpl_id'}"/>
                    <filter name="group_by_stage" string="Stage" context="{'group_by': 'stage_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Product Task Templates -->
    <record id="x_action_product_task_templates" model="ir.actions.act_window">
        <field name="name">x_Product Task Templates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.task.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="x_product_task_template_list"/>
        <field name="search_view_id" ref="x_product_task_template_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No x_task templates found
            </p>
            <p>
                Create x_task templates to define standard tasks for products.
            </p>
        </field>
    </record>

    <!-- Action for Enhanced Product Task Template Form -->
    <record id="x_action_product_task_template_form_enhanced" model="ir.actions.act_window">
        <field name="name">x_Task Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.task.template</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="x_product_task_template_form_enhanced"/>
        <field name="target">new</field>
    </record>

    <!-- Menu Item for Product Task Templates -->
    <menuitem 
        id="x_menu_product_task_templates"
        name="x_Product Task Templates"
        parent="project.menu_project_config"
        action="x_action_product_task_templates"
        sequence="60"/>

</odoo>
