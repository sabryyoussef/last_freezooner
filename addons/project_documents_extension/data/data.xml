<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Sequences for document numbering - Updated for documents module integration -->
        <record id="seq_project_required_document" model="ir.sequence">
            <field name="name">Project Required Document</field>
            <field name="code">project.required.document</field>
            <field name="prefix">REQ</field>
            <field name="padding">5</field>
        </record>

        <record id="seq_project_deliverable_document" model="ir.sequence">
            <field name="name">Project Deliverable Document</field>
            <field name="code">project.deliverable.document</field>
            <field name="prefix">DEL</field>
            <field name="padding">5</field>
        </record>

        <!-- Demo data for document categories -->
        <record id="project_document_category_legal" model="project.document.category">
            <field name="name">Legal Documents</field>
            <field name="description">Legal contracts, agreements, and compliance documents</field>
        </record>

        <record id="project_document_category_financial" model="project.document.category">
            <field name="name">Financial Documents</field>
            <field name="description">Financial reports, invoices, and payment documents</field>
        </record>

        <record id="project_document_category_technical" model="project.document.category">
            <field name="name">Technical Documents</field>
            <field name="description">Technical specifications, designs, and technical reports</field>
        </record>

        <!-- Demo data for document types -->
        <record id="project_document_type_contract" model="project.document.type">
            <field name="name">Contract Agreement</field>
            <field name="category_id" ref="project_document_category_legal"/>
            <field name="description">Legal contract between parties</field>
            <field name="is_required" eval="True"/>
            <field name="expiry_required" eval="True"/>
            <field name="reminder_days">30</field>
        </record>

        <record id="project_document_type_license" model="project.document.type">
            <field name="name">Business License</field>
            <field name="category_id" ref="project_document_category_legal"/>
            <field name="description">Business operating license</field>
            <field name="is_required" eval="True"/>
            <field name="expiry_required" eval="True"/>
            <field name="reminder_days">60</field>
        </record>

        <record id="project_document_type_invoice" model="project.document.type">
            <field name="name">Invoice</field>
            <field name="category_id" ref="project_document_category_financial"/>
            <field name="description">Project invoice</field>
            <field name="is_required" eval="False"/>
            <field name="expiry_required" eval="False"/>
        </record>

        <record id="project_document_type_specification" model="project.document.type">
            <field name="name">Technical Specification</field>
            <field name="category_id" ref="project_document_category_technical"/>
            <field name="description">Technical specification document</field>
            <field name="is_required" eval="True"/>
            <field name="expiry_required" eval="False"/>
        </record>

        <!-- Demo Product with x_ Required and Deliverable Documents -->
        <record id="product_demo_xdocs" model="product.template">
            <field name="name">Demo Product with x Documents</field>
            <field name="type">service</field>
            <field name="service_tracking">new_workflow</field>
        </record>

        <!-- Required x_Document for Product -->
        <record id="x_required_document_demo" model="project.required.document">
            <field name="product_tmpl_id" ref="product_demo_xdocs"/>
            <field name="x_document_type_id" ref="project_document_type_contract"/>
            <field name="x_is_required">True</field>
            <field name="x_expiry_date">2025-12-31</field>
            <field name="x_reminder_days">15</field>
            <field name="name">Demo Required Document</field>
        </record>

        <!-- Deliverable x_Document for Product -->
        <record id="x_deliverable_document_demo" model="project.deliverable.document">
            <field name="product_tmpl_id" ref="product_demo_xdocs"/>
            <field name="x_document_type_id" ref="project_document_type_specification"/>
            <field name="x_is_required">False</field>
            <field name="x_expiry_date">2025-12-31</field>
            <field name="x_reminder_days">30</field>
            <field name="name">Demo Deliverable Document</field>
        </record>

        <!-- Additional Demo Products for Testing -->
        <record id="product_demo_contract_only" model="product.template">
            <field name="name">Product - Contract Only</field>
            <field name="type">service</field>
            <field name="service_tracking">new_workflow</field>
        </record>
        <record id="x_required_document_contract_only" model="project.required.document">
            <field name="product_tmpl_id" ref="product_demo_contract_only"/>
            <field name="x_document_type_id" ref="project_document_type_contract"/>
            <field name="x_is_required">True</field>
            <field name="x_expiry_date">2025-11-30</field>
            <field name="x_reminder_days">10</field>
            <field name="name">Contract Only Required</field>
        </record>
        <record id="x_deliverable_document_contract_only" model="project.deliverable.document">
            <field name="product_tmpl_id" ref="product_demo_contract_only"/>
            <field name="x_document_type_id" ref="project_document_type_contract"/>
            <field name="x_is_required">False</field>
            <field name="x_expiry_date">2025-11-30</field>
            <field name="x_reminder_days">20</field>
            <field name="name">Contract Only Deliverable</field>
        </record>

        <record id="product_demo_license_and_invoice" model="product.template">
            <field name="name">Product - License and Invoice</field>
            <field name="type">service</field>
            <field name="service_tracking">new_workflow</field>
        </record>
        <record id="x_required_document_license" model="project.required.document">
            <field name="product_tmpl_id" ref="product_demo_license_and_invoice"/>
            <field name="x_document_type_id" ref="project_document_type_license"/>
            <field name="x_is_required">True</field>
            <field name="x_expiry_date">2025-10-15</field>
            <field name="x_reminder_days">5</field>
            <field name="name">License Required</field>
        </record>
        <record id="x_deliverable_document_invoice" model="project.deliverable.document">
            <field name="product_tmpl_id" ref="product_demo_license_and_invoice"/>
            <field name="x_document_type_id" ref="project_document_type_invoice"/>
            <field name="x_is_required">False</field>
            <field name="x_expiry_date">2025-10-15</field>
            <field name="x_reminder_days">10</field>
            <field name="name">Invoice Deliverable</field>
        </record>

        <record id="product_demo_spec_and_contract" model="product.template">
            <field name="name">Product - Spec and Contract</field>
            <field name="type">service</field>
            <field name="service_tracking">new_workflow</field>
        </record>
        <record id="x_required_document_spec" model="project.required.document">
            <field name="product_tmpl_id" ref="product_demo_spec_and_contract"/>
            <field name="x_document_type_id" ref="project_document_type_specification"/>
            <field name="x_is_required">True</field>
            <field name="x_expiry_date">2025-09-01</field>
            <field name="x_reminder_days">7</field>
            <field name="name">Spec Required</field>
        </record>
        <record id="x_deliverable_document_contract" model="project.deliverable.document">
            <field name="product_tmpl_id" ref="product_demo_spec_and_contract"/>
            <field name="x_document_type_id" ref="project_document_type_contract"/>
            <field name="x_is_required">False</field>
            <field name="x_expiry_date">2025-09-01</field>
            <field name="x_reminder_days">14</field>
            <field name="name">Contract Deliverable</field>
        </record>

    </data>
</odoo> 